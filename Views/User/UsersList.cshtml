@{
    ViewBag.Title = "Users List";
    string[] Tableheaders = new string[] { "UserId"
      ,"Firstname"
      ,"Surname"
      ,"Username"
      ,"Password"
      ,"UserStatusId"
      ,"UserRoleId"
      ,"UserGroupId"
      ,"Email"
      ,"Phone"
      ,"CreatedDate"
      ,"LastModifiedDate"
      ,"CreatedBy"
      ,"LastModifiedBy"
      };
}
<div>
    <div class="row">
        <div class="col-sm-12 text-center form-title">
            <h1>User List</h1>

        </div>
    </div>
    <table class="table table-bordered table-dark ">
        <thead>
            <tr>
                @{
                    foreach (var head in Tableheaders)
                    {
                        <th>
                            @head
                        </th>
                    }
                }
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {
                        <tr>
                            <td>@item.UserId</td>
                            <td>@item.Firstname</td>
                            <td> @item.Surname</td>
                            <td>@item.Username</td>
                            <td>@item.Password</td>
                            <td>@item.UserStatus</td>
                            <td>@item.UserRoleId</td>
                            <td>@item.UserGroupId</td>
                            <td>@item.Email</td>
                            <td>@item.Phone</td>
                            <td>@item.CreatedDate</td>
                            <td>@item.LastModifiedDate</td>
                            <td>@item.CreatedBy</td>
                            <td>@item.LastModifiedBy</td>
                            <td><a href="/user/useredit?id=@item.UserId">Edit</a></td>
                            <td><a href="/user/userdelete?id=@item.UserId">Delete</a></td>

                        </tr>

                }

            }

        </tbody>

    </table>

</div>
